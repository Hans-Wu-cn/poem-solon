<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.noear</groupId>
        <artifactId>solon-parent</artifactId>
        <version>2.5.4-M2</version>
    </parent>
    <groupId>cn.poem.solon</groupId>
    <artifactId>poem-solon</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <modules>
        <module>main</module>
        <module>poem-framework</module>
    </modules>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <java.version>17</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <lombok.version>1.18.26</lombok.version>
        <mapstruct.version>1.5.5.Final</mapstruct.version>
        <mybaits-flex.version>1.5.0</mybaits-flex.version>
    </properties>
    <dependencyManagement>
        <dependencies>

            <!--poem-common 模块-->
            <dependency>
                <groupId>cn.poem.solon</groupId>
                <artifactId>poem-common</artifactId>
                <version>${version}</version>
            </dependency>
            <!--poem-core 模块-->
            <dependency>
                <groupId>cn.poem.solon</groupId>
                <artifactId>poem-core</artifactId>
                <version>${version}</version>
            </dependency>
            <!--poem-security 模块 -->
            <dependency>
                <groupId>cn.poem.solon</groupId>
                <artifactId>poem-security</artifactId>
                <version>${version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
        </dependency>

        <!--日志依赖-->
        <dependency>
            <groupId>org.noear</groupId>
            <artifactId>solon.logging.simple</artifactId>
        </dependency>
    </dependencies>


    <repositories>
        <repository>
            <id>tencent</id>
            <url>https://mirrors.cloud.tencent.com/nexus/repository/maven-public/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>